        </div>

        <div class="header">
            <h1>{{ t.title }}</h1>
            <p>{{ t.subtitle }}</p>
        </div>

        <!-- Category Selection -->
        <div v-if="!selectedCategory" class="categories">
            <button
                v-for="category in categories"
                :key="category.id"
                @click="selectCategory(category)"
                class="category-btn">
                {{ category.emoji }} {{ category.name[currentLang] }}
            </button>
        </div>

        <!-- Image Viewer -->
        <div v-else>
            <button @click="goBack" class="back-btn">‚¨ÖÔ∏è {{ t.backButton }}</button>

            <div class="viewer-container">
                <div class="image-container">
                    <img :src="getCurrentImageSrc()" :alt="currentImage.name[currentLang]" class="main-image">
                </div>

                <div class="image-name">{{ currentImage.name[currentLang] }}</div>

                <div class="navigation">
                    <button @click="previousImage" class="nav-btn">‚óÄÔ∏è</button>
                    <div class="counter">{{ currentIndex + 1 }} / {{ currentCategoryImages.length }}</div>
                    <button @click="nextImage" class="nav-btn">‚ñ∂Ô∏è</button>
                </div>
            </div>
        </div>

        <!-- Credits Section -->
        <div class="credits">
            <h2>üì∏ {{ t.creditsTitle }}</h2>
            <p><strong>{{ t.creditsStatus }}</strong> {{ t.creditsText1 }}</p>
            <p>{{ t.creditsText2 }}</p>
