                },
                currentImage() {
                    return this.currentCategoryImages[this.currentIndex] || {};
                }
            },
            methods: {
                switchLanguage(lang) {
                    this.currentLang = lang;
                    localStorage.setItem('firstwords-lang', lang);
                },
                selectCategory(category) {
                    this.selectedCategory = category;
                    this.currentIndex = 0;
                },
                goBack() {
                    this.selectedCategory = null;
                    this.currentIndex = 0;
                },
                nextImage() {
                    if (this.currentIndex < this.currentCategoryImages.length - 1) {
                        this.currentIndex++;
                    } else {
                        this.currentIndex = 0; // Loop back to start
                    }
                },
                previousImage() {
                    if (this.currentIndex > 0) {
                        this.currentIndex--;
                    } else {
                        this.currentIndex = this.currentCategoryImages.length - 1; // Loop to end
                    }
                }
            }
        }).mount('#app');
